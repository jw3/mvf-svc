<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{ISO8601}] [%-5level] [%.20thread] [%logger{15}] - %msg %n</pattern>
        </encoder>
    </appender>

    <root level="${LOG_LEVEL:-debug}">
        <appender-ref ref="console"/>
    </root>
</configuration>
